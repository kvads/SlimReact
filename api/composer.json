{
    "name": "kvads/slimreact",
    "description": "Demo-project for IDP",
    "type": "project",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "php-di/invoker": "^2.0",
        "php-di/php-di": "^6.0",
        "psr/container": "^1.0",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.10",
        "symfony/console": "^5.4"
    },
    "require-dev": {
        "overtrue/phplint": "^1.2",
        "squizlabs/php_codesniffer": "^3.5",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "lint": "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "app": "php bin/app.php --ansi"
    },
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Kirill Vasyukov"
        }
    ]
}
